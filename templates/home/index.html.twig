{% extends 'base.html.twig' %}

{% block title %}Welcome in home page!{% endblock %}

{% block body %}


<div class="container">
  <h1>Welcome in Home page</h1>
  <p>This is some text.</p>
</div>

<div class="container">
  <h2> Les derniers biens </h2>
  <div class="row flex">

      {% for p in properties %}
        <div class="col-3">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title">Special title treatment</h5>
              <a href="{{path('property.show',{id:p.id,title:p.title})}}">{{p.title}}</a>
              <p class="card-text">{{p.city}} {{p.postalCode}}</p>
              <div class="text-primary" style="font-weight :bold;font-size : 2erm;"> {{p.price | number_format(0, '',' ')}} $</div>
            </div>
          </div>
        </div>
   
     
      {% endfor %}
  </div>
</div>

{% endblock %}
